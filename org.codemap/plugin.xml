<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="mapview" name="mapview" schema="schema/mapview.exsd"/>
   <extension
         id="HapaxBuilder"
         name="Hapax Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="false">
         <run
               class="org.codemap.builder.HapaxBuilder">
         </run>
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="ch.unibe.softwaremap"
            name="Software Cartography">
      </category>
      <view
            category="ch.unibe.softwaremap"
            class="org.codemap.mapview.MapView"
            icon="icons/sample.gif"
            id="ch.unibe.softwaremap.MapView"
            name="Map View"
            restorable="true">
      </view>
      <view
            category="ch.unibe.softwaremap"
            class="org.codemap.util.SelectionView"
            id="ch.unibe.softwaremap.SelectionView"
            name="Selection View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.codemap.editors.CodemapEditor"
            default="true"
            extensions="map"
            icon="icons/sample.gif"
            id="org.codemap.mapeditor"
            name="Codemap editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.codemap"
            name="Software Cartography">
      </category>
      <wizard
            category="org.codemap"
            class="org.codemap.wizards.NewCodemapCreationWizard"
            icon="icons/sample.gif"
            id="org.codemap.wizards.NewCodemapCreationWizard"
            name="Codemap">
      </wizard>
   </extension>

</plugin>
